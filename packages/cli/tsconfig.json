{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "lib": ["es2017", "dom"],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src/**/*", "./package.json"],
  "exclude": ["node_modules", "dist"]
}
